<UserControl 
    x:Class="AW.Visual.VisualType.ColorPickerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="clr-namespace:AW.Visual.Common"
    mc:Ignorable="d">
    <StackPanel>
        <md:PopupBox
            x:Name="Element"
            StaysOpen="True" Padding="0 8 0 0">
            <md:PopupBox.ToggleContent>
                <StackPanel
                    Height="22"
                    Orientation="Horizontal">
                    <Rectangle
                        Stroke="{DynamicResource MaterialDesignDivider}"
                        Width="18"
                        Height="18"
                        HorizontalAlignment="Center">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding Value}"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Label
                        x:Name="TagLabel"
                        Content="{Binding Tag}"
                        Margin="5 0 0 0"
                        HorizontalContentAlignment="Center"/>
                </StackPanel>
            </md:PopupBox.ToggleContent>
            <StackPanel>
                <base:ColorPicker
                    x:Name="ColorPicker"
                    Margin="0 0 5 0"/>
                <StackPanel
                    Margin="0 5 0 -2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <base:ActionControl DataContext="{Binding Ok}"/>
                    <base:ActionControl DataContext="{Binding Cancel}"/>
                </StackPanel>
            </StackPanel>
        </md:PopupBox>
    </StackPanel>
</UserControl>
